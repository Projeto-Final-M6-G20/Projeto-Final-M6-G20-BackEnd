generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Advertisement {
  id           String    @id
  title        String
  price        Float
  description  String
  year         Int
  model        String
  fuel_type    String
  brand        String
  mileage      String?
  color        String?
  fipe_price   Float?
  is_available Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  images       Image[]
  User         User?     @relation(fields: [userId], references: [id])
  userId       String?
  Comment      Comment[]

  @@map("advertisements")
}

model Image {
  id              String         @id
  url             String
  Advertisement   Advertisement? @relation(fields: [advertisementId], references: [id])
  advertisementId String?

  @@map("images")
}

model User {
  id             String          @id
  email          String          @unique
  password       String
  fullname       String
  cpf            String          @unique
  cellphone      String?
  is_advertiser  Boolean         @default(false)
  birth_date     DateTime?       @db.Date
  description    String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  deletedAt      DateTime?
  advertisements Advertisement[]

  comments Comment[]
  Address  Address?

  @@map("users")
}

model Address {
  id         String    @id
  street     String
  zip_code   String
  number     String
  city       String
  state      String
  complement String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
  user       User      @relation(fields: [userId], references: [id])
  userId     String    @unique

  @@map("addresses")
}

model Comment {
  id              String        @id
  content         String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  deletedAt       DateTime?
  user            User          @relation(fields: [userId], references: [id])
  advertisement   Advertisement @relation(fields: [advertisementId], references: [id])
  userId          String
  advertisementId String

  @@map("comments")
}
